{
  "MongoDbSettings": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "RealtimeXDashboard",
    "RealTimeDataCollectionName": "RealTimeData",
    "AnnouncementsCollectionName": "Announcements",
    "ChatMessagesCollectionName": "ChatMessages",
    "UsersCollectionName": "Users"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "your-secret-key-here",
    "Issuer": "RealtimeX.Dashboard",
    "Audience": "RealtimeX.Dashboard.Client",
    "ExpirationInMinutes": 60
  }
}
